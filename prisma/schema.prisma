datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL2")
  relationMode = "prisma"
}

model members {
  id               BigInt                  @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  name             String                  @db.Text
  user_id          String                  @db.Text
  qr_code          String                  @db.Text
  is_admin         Boolean?                @default(false)
  email_address    String                  @db.Text
  phone_number     String?                 @db.Text
  is_waiver_signed Boolean?                @default(false)
  contract_status  members_contract_status @default(none)
  customer_id      String?                 @db.Text
}

model contracts {
  id            BigInt   @id @unique(map: "id") @default(autoincrement()) @db.UnsignedBigInt
  status        String   @db.Text
  type          String   @db.Text
  length        DateTime @db.DateTime(0)
  start_date    DateTime @db.DateTime(0)
  email_address DateTime @db.DateTime(0)
  paid          Boolean? @default(false)
  owner_id      Int
}

enum members_contract_status {
  active
  expired
  none
}
